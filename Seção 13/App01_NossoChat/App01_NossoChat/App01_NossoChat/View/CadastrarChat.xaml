<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_NossoChat.View.CadastrarChat"
             BackgroundColor="#5ED055">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Nome do chat" PlaceholderColor="LightGray" BackgroundColor="White" TextColor="#5ED055" Text="{Binding Nome}"/>
            <Button BackgroundColor="Transparent" Text="Cadastrar" TextColor="White" Command="{Binding Cadastrar}"/>
            <Label Text="{Binding Mensagem}" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>