             x:Class="App01_ControleXF.Controles.EntryEditorPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry
                x:Name="TxtIdade"
                Text=""
                TextColor="Red"
                Placeholder="Digite sua idade"
                PlaceholderColor="Blue"
                IsPassword="False"
                
                Keyboard="Numeric"
                
                BackgroundColor="Gray"/>
            <Label x:Name="Lbl_Duplicado"/>
            
            
            <Editor HeightRequest="200" x:Name="TxtComentario"/>
            <Label x:Name="LblQuantidadeCaracteres"/>
            <!-- InputView -->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>